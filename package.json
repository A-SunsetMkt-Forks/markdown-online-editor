{
  "name": "markdown-online-editor",
  "version": "0.1.0",
  "author": "nicejade <yunjeff@163.com>",
  "private": true,
  "description": "📝基于 Vue、Vditor，所构建的在线 Markdown 编辑器，支持流程图、甘特图、时序图、任务列表、HTML 自动转换为 Markdow等功能。",
  "scripts": {
    "start": "yarn serve",
    "serve": "vue-cli-service serve --open",
    "build": "vue-cli-service build",
    "watcher": "onchange \"src/**/**/*.{js,css,scss,vue}\" -- prettier --write {{changed}}",
    "prettier": "prettier --write \"src/**/**/*.{js,css,scss,vue}\"",
    "lint": "vue-cli-service lint",
    "test": "vue-cli-service test:unit",
    "deploy": "bash ./commands/deploy.sh",
    "analyz": "NODE_ENV=production  npm_config_report=true npm run build",
    "clear-commit-msg": "bash ./commands/clear-commit-msg.sh",
    "eslint-fix": "eslint src/**/**/*.vue --fix",
    "format-code": "prettier-eslint --write \"src/**/*.{js,vue,css,scss}\"",
    "precommit-msg": "echo '🐉 Start pre-commit checks...' && exit 0",
    "preview": "node ./commands/preview.js"
  },
  "dependencies": {
    "canvg": "^2.0.0",
    "element-ui": "^2.8.2",
    "hint.css": "^2.6.0",
    "html2canvas": "^1.0.0-rc.3",
    "html2pdf.js": "^0.9.1",
    "lodash": "4.17.14",
    "register-service-worker": "^1.0.0",
    "vditor": "1.5.12",
    "vue": "^2.5.17",
    "vue-meta": "^1.6.0",
    "vue-router": "^3.0.1"
  },
  "devDependencies": {
    "@vue/cli-plugin-babel": "^3.6.0",
    "@vue/cli-plugin-eslint": "^3.6.0",
    "@vue/cli-plugin-pwa": "^3.6.0",
    "@vue/cli-plugin-unit-jest": "^3.6.0",
    "@vue/cli-service": "^3.6.0",
    "@vue/test-utils": "^1.0.0-beta.29",
    "babel-core": "7.0.0-bridge.0",
    "babel-jest": "^23.0.1",
    "eslint-config-prettier": "^2.9.0",
    "eslint-plugin-prettier": "^2.6.0",
    "husky": "^0.14.3",
    "lint-staged": "^7.2.0",
    "node-sass": "^4.9.0",
    "onchange": "^5.2.0",
    "prerender-spa-plugin": "^3.4.0",
    "prettier-eslint-cli": "^4.7.1",
    "sass-loader": "^7.0.1",
    "size-plugin": "^1.0.0",
    "svg-sprite-loader": "^3.8.0",
    "svgo-loader": "1.1.0",
    "vue-svg-loader": "^0.5.0",
    "vue-template-compiler": "^2.5.17",
    "webpack-bundle-analyzer": "3.3.2"
  },
  "babel": {
    "presets": [
      "@vue/app"
    ]
  },
  "eslintConfig": {
    "globals": {
      "L": true
    },
    "root": true,
    "env": {
      "node": true,
      "es6": true
    },
    "rules": {
      "no-console": 0,
      "no-useless-escape": 0,
      "no-multiple-empty-lines": [
        2,
        {
          "max": 3
        }
      ],
      "prettier/prettier": [
        "error",
        {
          "singleQuote": true,
          "semi": false,
          "trailingComma": "none",
          "bracketSpacing": true,
          "jsxBracketSameLine": true,
          "insertPragma": true,
          "requirePragma": false
        }
      ]
    },
    "plugins": [],
    "extends": [
      "plugin:vue/essential",
      "plugin:prettier/recommended",
      "eslint:recommended"
    ],
    "parserOptions": {
      "parser": "babel-eslint"
    }
  },
  "prettier": {
    "singleQuote": true,
    "semi": false,
    "printWidth": 100,
    "proseWrap": "never"
  },
  "postcss": {
    "plugins": {
      "autoprefixer": {}
    }
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not ie <= 8"
  ],
  "eslintIgnore": [
    "package.json"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "yarn run precommit-msg && lint-staged"
    }
  },
  "lint-staged": {
    "**/**.{js,json,pcss,vue,css,scss}": [
      "prettier --write"
    ]
  }
}
